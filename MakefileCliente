CC=g++

.SUFFIXES: .o .cpp
.cpp.o:
	$(CC) -c $<

OBJETS: comunicacion.o juego_online.o

juego_online : $(OBJETS)
	$(CC) -o juego_online $(OBJECTS) -lpthread -lncurses

comunicacion.o : comunicacion.h
	$(CC) -c comunicacion.cpp

juego_online.o : comunicacion.h
	$(CC) -c juego_online.cpp

.PHONY: clean
clean :
	-rm $(OBJECTS) juego_online
