#El compilador a usar guardado en una variable.
CC=g++
#Extension de los archivos a utilizar.
.SUFFIXES: .o .cpp
.cpp.o: 
	$(CC) -c $<

OBJECTS = servidor.o comunicacion.o

servidor: $(OBJECTS)
	$(CC) -o servidor $(OBJECTS) -lpthread

servidor.o: comunicacion.h
	$(CC) -c servidor.cpp 

comunicacion.o: comunicacion.h
	$(CC) -c comunicacion.cpp

.PHONY : clean
clean:
	-rm servidor $(OBJECTS)
